{% extends 'base.html.twig' %}

{% block title %}Detalles usuario{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}
{% block body %}
<div class="container">
	{# <main class=""> #}
		<div class="card mt-4">
		    <div class="card-body">
			  	<div class="">
			    	<h4>Usuario | Detalles Usuario</h4>
				</div>
			</div>
		</div>

	    <div class="card mt-4 col-md-8 p-5 mx-auto">
	  	<div class="card-header">
	  		<h3 class="text-center ">Información de usuario</h3>
	  	</div>
		  <div class="card-body">
			  <form action="{{ path('user.store')}}" method="POST">
			  	<div class="py-4">
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="name">Nombre: {{ user.Name}}</label>
							{# <input type="text" name="name" class="form-control" id="name" required> #}
						</div>
						<div class="form-group col-md-6">
							<label for="last_name">Apellido: {{ user.LastName}}</label>
							{# <input type="text" name="last_name" class="form-control" id="last_name" required> #}
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="email">Correo eléctronico: {{ user.Email}}</label>
							{# <input type="email" name="email" class="form-control" id="email" required> #}
						</div>
						<div class="form-group col-md-6">
							<label for="document">Cedula: {{ user.Document}}</label>
							{# <input type="text" name="document" class="form-control" id="document" required> #}
						</div>
					</div>
					<div class="col-12 mt-3 text-center">
	                    	<a href="{{ path('user.index') }}" class="btn btn-sm btn-secondary">
	                        Volver
	                    	</a>
	                    	{# <button type="submit" class="btn btn-sm btn-success">
	                    	Aceptar
	                    	</button> #}
	            	  </div>
			  	</div>
			  </form>
		  </div>
		</div>
    {# </main> #}
</div>
{% endblock %}

